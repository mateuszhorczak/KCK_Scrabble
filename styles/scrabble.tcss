$animation-type: linear;
$animation-speed: 175ms;

#app-container {
    width: 98%;
    height: 98%;
}

GameGrid {
    margin-top: 1;
    margin-left: 4;
    layout: grid;
    grid-size: 15 15;
    layer: gameplay;
    grid-columns: 13;
    grid-rows: 3;
}

#nav-left {
    margin-top: 2;
    dock: left;
    width: 2;
    layout: grid;
    grid-size: 1 15;
    color: red;
    grid-columns: 2;
    grid-rows: 3;
    text-style: bold;
}

#nav-top {
    margin-left: 8;
    dock: top;
    height: 1;
    layout: grid;
    grid-size: 15 1;
    color: red;
    grid-columns: 13;
    grid-rows: 1;
    text-style: bold;
}

Header {
    dock: top;
    height: 1;

}

Footer {
    height: 1;
    dock: bottom;
    layer: gameplay;
}

GameCell {
    transition: background $animation-speed $animation-type, color $animation-speed $animation-type;
    border: tall black;
}

InformationLabel {
    dock: bottom;
    background: gray 10%;
    height: 7;
    margin: 1;
    min-width: 60;
    padding: 1;
}

InformationLabel Label {
    margin-bottom: 1;
    color: green;
    text-style: bold;
}

LetterInput {
    width: 50;
}

NicknameInsertPlace {
    margin-top: 2;
    background: $boost;
    height: 6;
    margin: 1;
    min-width: 50;
    padding: 1;
}

.information_container {
    align: center middle;
    color: green;
    height: 5;
    padding: 1;
    background: gray 20%;
    margin-top: 2;
    margin-bottom: 2;
}

.information_tag {
    width: auto;
    margin-bottom: 1;
    text-style: bold;
}

RoundNumberPretty {
    width: auto;
    text-style: bold;
    margin-right: 2;
}

UserLettersPretty {
    width: auto;
    text-style: bold;
}

PlayerNameLabelPretty {
    width: auto;
    text-style: bold;
    margin-right: 2;
}

ScorePretty {
    width: 10;
    height: 10;
    text-style: bold;
}

#score_view {
    color: green;
    width: 30%;
    height: auto;
    padding: 2;
    background: gray 10%;
}

#score_view2 {
    color: green;
    width: 30%;
    height: auto;
    padding: 2;
}

#word_view {
    color: green;
    width: 30%;
    height: auto;
    padding: 2;
    dock: right;
    margin-top: 1;
}

ScoreBoard {
    align: center middle;
    margin: 0;
}

.letters_values {
    align: left middle;
    color: green;
    height: 100%;
    margin-left: 4;
    margin-right: 4;
    margin-top: 2;
    margin-bottom: 2;
    padding: 2;
    background: gray 10%;
}

#description {
    align: right middle;
    color: green;
    height: 100%;
    margin-left: 4;
    margin-right: 4;
    margin-top: 2;
    margin-bottom: 2;
    padding: 2;
    background: gray 10%;
}


.help_labels {
    width: 100%;
    height: auto;
}

.letter_and_values_tag {
    width: auto;
    margin-bottom: 1;
    margin-left: 1;
}

#end_game_container {
    width: 100%;
    height: auto;
    background: gray 20%;
    margin: 4;
}
